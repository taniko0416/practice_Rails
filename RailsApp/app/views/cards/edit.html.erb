<h1>Cards#edit</h1>
<p><%= 「@card.title」の内容を編集します。 %></p>

<table>
<%= form_for(@card,url:{controller:'cards',action:'edit',id:@card.id}) do |form| %>

<tr>
<th>タイトル</th>
<td><%= form.text_filed:titile,{size:40} %></td>
</tr>

<tr>
<th>著者</th>
<td><%= form.text_filed:author,{size:40} %></td>
</tr>

<tr>
<th>価格</th>
<td><%= form.text_number:price,{size:10} %></td>
</tr>

<tr>
<th>出版社</th>
<td><%= form.text_filed:publisher,{size:40} %></td>
</tr>

<tr>
<th>コメント</th>
<td><%= form.text_area:memo,{size:40} %></td>
</tr>

<tr>
<th></th>
<td><%= form.submit "更新" %></td>
</tr>

<% end %>
</table>
<p class="link"><a href="/cards">&lt;&lt;※トップページに戻る</a></p>
